    }, 
    {
        "text": "", 
        "line": 15, 
        "range": [], 
        "entities": []
    }, 
    {
        "text": "Trekking in Sapa with Guided Tours", 
        "line": 16, 
        "range": [
            1961, 
            1994
        ], 
        "entities": [
            {
                "type": "LOC_NAME", 
                "span": [
