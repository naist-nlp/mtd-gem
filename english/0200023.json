            }
        ]
    }, 
    {
        "text": "", 
        "line": 9, 
        "range": [], 
        "entities": []
    }, 
    {
        "text": "Visiting Hahoe Folk Village", 
        "line": 10, 
        "range": [
            978, 
            1004
        ], 
        "entities": [
            {
                "type": "LOC_NAME", 
                "span": [
